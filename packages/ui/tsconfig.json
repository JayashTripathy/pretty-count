{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "target": "es5",
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@pc/ui/*": ["./src/*"]
    }
  },
  "include": [".", "src/**/*"],
  "exclude": ["node_modules", "dist"]
}
